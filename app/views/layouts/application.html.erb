<!DOCTYPE html>
<html>
  <head>
    <title>BreakableMaps</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div>
      <% if user_signed_in? %>
        <a href='#'>Sign Out</a>
      <% else %>
        <a href='/users/sign_up'>Sign Up</a>
      <% end %>
    </div>
    <% flash.each do |key, value| %>
      <%= value %>
    <% end %>

    <%= yield %>
  </body>
</html>
