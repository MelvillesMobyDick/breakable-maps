<h3>Add a comment!</h3>

<div class="form">
  <%= form_for([@journey, @comment]) do |f| %>
  <div class='form-label'>
    <%= f.label :name %>
  </div>
    <%= f.text_field :name %>

    <%= f.label :body %>
    <%= f.text_field :body %>

    <%= f.submit 'Submit' %>
  <% end %>
</div>
